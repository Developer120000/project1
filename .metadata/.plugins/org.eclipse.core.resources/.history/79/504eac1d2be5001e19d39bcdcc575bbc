document.addEventListener("DOMContentLoaded", function() {
    let sameAsBillingCheckbox = document.querySelector('#sameAsBilling');
    let newAddressCheckbox = document.querySelector('#newAddress');

    document.querySelectorAll('.dc3').forEach(function(label) {
        label.addEventListener('click', function() {
            let checkboxId = this.getAttribute('for');
            let checkbox = document.querySelector('#' + checkboxId);
            checkbox.checked = !checkbox.checked;
        });
    });
});